@using Sloth.Core.Extensions
@model Sloth.Core.Models.Scrubber

@{
    ViewBag.Title = "Scrubber Details";
}

@section AdditionalStyles
{
    <link href="~/css/prism.css" rel="stylesheet" />

    <style>
        pre.code-toolbar > .toolbar a, pre.code-toolbar > .toolbar button, pre.code-toolbar > .toolbar span {
            color: black;
            font-size: 16px;
            background-color: white;
        }
    </style>
}

<div class="container">
    <h2>@ViewBag.Title</h2>

    <dl class="row">
        <div class="col>
            <dt>@Html.DisplayNameFor(x => x.Id)</dt>
            <dd>@Model.Id</dd>
        </div>
        <div class="col>
            <dt>@Html.DisplayNameFor(x => x.Uri)</dt>
            <dd>@Model.Uri</dd>
        </div>
    </dl>

    <partial name="_TransactionsTable" model="Model.Transactions" />

    <pre><code class="language-markup">@Model.ToXml()</code></pre>
</div>

@section AdditionalScripts
{
    <script src="~/js/prism.js"></script>
    <script>
        $('#transactions').dataTable({
            "columnDefs": [
                {
                    "targets": 0,
                    "visible": false,
                }
            ]
        });</script>
}
