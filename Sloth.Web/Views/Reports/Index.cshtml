@using Sloth.Core.Resources
@model string
@{
    ViewBag.Title = "Reports";
    var teamSlug = Model;
}

@section AdditionalStyles
    {
    <style>
        .job img.card-img-top {
            max-height: 180px;
            object-fit: cover;
        }
    </style>
}

    <div class="container">
        <h2>@ViewBag.Title</h2>
        <div class="row">
        @if (!string.IsNullOrEmpty(teamSlug))
        {
            <div class="col-md-6">
                <h3>Team Reports</h3>
                <div class="card job">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="~/@(teamSlug)/Reports/FailedTransactions">Failed Transactions</a>
                        </h5>
                        <p class="card-text">
                            Shows transactions that have been rejected or have been in status <code>Processing</code> for more than 5 days.
                        </p>
                    </div>
                </div>
            </div>
        }

        @if (User.IsInRole(Roles.SystemAdmin))
        {
            <div class="col-md-6">
                <h3>System Admin Reports</h3>
                <div class="card job">

                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-action="FailedTransactionsAllTeams">Failed Transactions Across All Teams</a>
                        </h5>
                        <p class="card-text">
                            Shows transactions across all teams that have been rejected or have been in status <code>Processing</code> for more than 5 days.
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

