                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>*@
                    </div>

                    <button type="submit" class="btn btn-light mt-1">Apply filter</button>
                </div>

            </div>
        </form>



