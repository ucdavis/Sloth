@model IEnumerable<Sloth.Core.Models.Transaction>

@{
    ViewBag.Title = "Transactions";
}

@section AdditionalStyles {
    @*<link rel="stylesheet" href="~/lib/datatables.bootstrap.css" />*@
}

<h2>@ViewBag.Title</h2>

<table id="transactions" class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(x => x.Id)</th>
        <th>@Html.DisplayNameFor(x => x.KfsTrackingNumber)</th>
        <th>@Html.DisplayNameFor(x => x.DocumentNumber)</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var t in Model)
    {
        <tr>
            <th scope="row">@t.Id</th>
            <td>@t.KfsTrackingNumber</td>
            <td>@t.DocumentNumber</td>
            <td>
                <a class="btn btn-primary btn-sm" href="@Url.Action("Details", new { id = t.Id })">
                    <div class="fa fa-arrow-right"></div>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>


@section AdditionalScripts {
    <script src="~/lib/jquery.datatables.js"></script>
    @*<script src="~/lib/datatables.bootstrap.js"></script>*@
    <script>
        $('#transactions').dataTable();
    </script>
}
