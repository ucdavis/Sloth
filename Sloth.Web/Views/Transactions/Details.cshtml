@model Sloth.Core.Models.Transaction

@{
    ViewBag.Title = "Transaction Details";
}

@section AdditionalStyles {
    @*<link rel="stylesheet" href="~/lib/datatables.bootstrap.css" />*@
}

<h2>@ViewBag.Title</h2>

<table id="transfers" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(x => x.Transfers[0].Id)</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model.Transfers)
        {
            <tr>
                <th scope="row">@t.Id</th>
                <th>@t.Amount.ToString("C")</th>
                <th>@t.Direction</th>
                <th>@t.FullAccountToString()</th>
                <th>@t.FullObjectToString()</th>
            </tr>
        }
    </tbody>
</table>


@section AdditionalScripts {
    <script src="~/lib/jquery.datatables.js"></script>
    @*<script src="~/lib/datatables.bootstrap.js"></script>*@
    <script>
        $('#transactions').dataTable();
    </script>
}
