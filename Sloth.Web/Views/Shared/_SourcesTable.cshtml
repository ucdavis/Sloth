@using Sloth.Core.Models
@model IEnumerable<Source>

<table id="sourcesTable" class="table table-bordered">
    <thead>
    <tr>
        <th>Team Name</th>
        <th>Source Name</th>
        <th>Type</th>
        <th>Chart</th>
        <th>Organization Code</th>
        <th>Origin Code</th>
        <th>Document Type</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var source in Model)
    {
        <tr>
            <td>@source.Team.Name</td>
            <td>@source.Name</td>
            <td>@source.Type</td>
            <td>@source.Chart</td>
            <td>@source.OrganizationCode</td>
            <td>@source.OriginCode</td>
            <td>@source.DocumentType</td>
            <td>
                <a asp-controller="Sources" asp-action="Edit" asp-route-id="@source.Id" class="btn btn-primary btn-sm">Edit</a>
            </td>
        </tr>
    }
    </tbody>
</table>
